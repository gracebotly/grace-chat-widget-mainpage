    <script>
        let chatOpen = false;

        function toggleChat() {
            const chatWindow = document.getElementById('chat-window');
            const chatButton = document.getElementById('chat-button');
            
            chatOpen = !chatOpen;
            
            if (chatOpen) {
                chatWindow.classList.add('open');
            } else {
                chatWindow.classList.remove('open');
            }

            // Optional: Track analytics
            if (typeof gtag !== 'undefined') {
                gtag('event', chatOpen ? 'chat_opened' : 'chat_closed', {
                    'event_category': 'engagement',
                    'event_label': 'consultation_chatbot'
                });
            }
        }

        // Optional: Auto-show after delay (like your current setup)
        setTimeout(() => {
            if (!chatOpen) {
                // Could add a subtle animation or notification here
                // to match your current Notion behavior
            }
        }, 5000);
    </script>
